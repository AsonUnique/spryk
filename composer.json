{
  "name": "spryker-sdk/spryk",
  "type": "library",
  "description": "Spryk module",
  "license": "proprietary",
  "require": {
    "php": ">=7.1",
    "roave/better-reflection": "^2.0 || ^3.0",
    "spryker/config": "^3.0.0",
    "spryker/kernel": "^3.17.0",
    "spryker/symfony": "^3.0.0",
    "spryker/twig": "^3.0.0",
    "spryker/zend": "^2.0.0",
    "symfony/console": "^3.4.0 || ^4.0.0",
    "symfony/finder": "^3.4.0 || ^4.0.0",
    "symfony/yaml": "^3.4.9",
    "twig/twig": "^1.34 || ^2.0.0",
    "zendframework/zend-filter": "^2.8"
  },
  "require-dev": {
    "codeception/codeception": "^2.4.1",
    "nette/finder": "^2.4.0",
    "nette/utils": "^2.5.0",
    "php-coveralls/php-coveralls": "^1.0",
    "phpstan/phpstan": "^0.10.0",
    "phpstan/phpstan-phpunit": "^0.10.0",
    "phpstan/phpstan-strict-rules": "^0.10.0",
    "symfony/var-dumper": "^4.0.9"
  },
  "autoload": {
    "psr-4": {
      "SprykerSdk\\": "src/SprykerSdk/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SprykerSdkTest\\": "tests/SprykerSdkTest/",
      "Spryker\\Yves\\Kernel\\": "vendor/spryker/kernel/src/Spryker/Yves/Kernel/",
      "Spryker\\Zed\\Kernel\\": "vendor/spryker/kernel/src/Spryker/Zed/Kernel/",
      "Spryker\\Shared\\Kernel\\": "vendor/spryker/kernel/src/Spryker/Shared/Kernel/",
      "Spryker\\Client\\Kernel\\": "vendor/spryker/kernel/src/Spryker/Client/Kernel/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-install-cmd": [
      "GitHook\\Composer\\Scripts\\HookInstaller::installGitHook"
    ],
    "post-update-cmd": [
      "GitHook\\Composer\\Scripts\\HookInstaller::installGitHook"
    ],
    "cs-check": "phpcs --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml -v src/ tests/ --ignore='/Fixtures/'",
    "cs-fix": "phpcbf --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml -v src/ tests/ --ignore='/Fixtures/'",
    "phpstan": "phpstan analyse -l 7 -c phpstan.neon src/"
  },
  "config": {
    "use-include-path": true,
    "process-timeout": 600,
    "sort-packages": true
  }
}
