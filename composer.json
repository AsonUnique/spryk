{
  "name": "spryker/spryk",
  "description": "Spryker Spryk build tool",
  "license": "MIT",
  "require": {
    "php": ">=7.1",
    "twig/twig": "^1.22",
    "symfony/yaml": "^3.4.9",
    "zendframework/zend-filter": "^2.8"
  },
  "require-dev": {
    "codeception/codeception": "*",
    "symfony/var-dumper": "^4.0.9",
    "phpstan/phpstan": "^0.8.5",
    "spryker/kernel": "^3.0.0",
    "spryker/code-sniffer": "dev-master as 1.0.0",
    "php-coveralls/php-coveralls": "^1.0",
    "spryker/git-hook": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Spryker\\": "src/Spryker/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SprykerTest\\": "tests/SprykerTest/",
      "Spryker\\Zed\\CatFace\\": "tests/_data/vendor/spryker/spryker/Bundles/CatFace/src/Spryker/Zed/CatFace/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "use-include-path": true,
    "process-timeout": 600
  },
  "scripts": {
    "post-install-cmd": [
      "GitHook\\Composer\\Scripts\\HookInstaller::installGitHook"
    ],
    "post-update-cmd": [
      "GitHook\\Composer\\Scripts\\HookInstaller::installGitHook"
    ]
  }
}
